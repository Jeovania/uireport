<% titulo "Esqueceu sua senha?" %>

<div class="row-fluid">
  <div class="col-md-6 col-md-offset-3 well" style="margin-top: 30px;">

    <div class="page-header text-center">
    	<h1>Esqueceu sua senha?</h1>
    </div>

    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
     	<%= devise_error_messages! %>

    <div class="form-group text-center">
      <div><%= f.label :email, "E-Mail" %><br />
      <%= f.email_field :email, :class => 'form-control' %></div>
    </div>

    <div class="form-group text-center">
      <div><%= f.submit "Envie-me instruções para resetar minha senha", :class => 'btn btn-lg btn-primary'  %></div>
    </div>

    <% end %>

    <div class="text-center">
    	<%= render "devise/shared/links" %>
    </div>
  </div>
</div>