<% titulo "Resultado para tela #{@tela.position}" %>

<%= javascript_include_tag "highcharts.js", "chartkick" %>

<div class="container-default">

<div class="page-header text-center">
	<h1 class="title">Resultado de avaliação para tela <%= @tela.position %><br><small>Estatísticas e comentários para tela de <strong><%= @project.name %></strong></small></h1>
	<%= link_to "<i class='flaticon-pdf21 icon-pdf'></i><br><p>Salvar PDF</p>".html_safe, profile_project_tela_resultado_tela_path(@project.id, @tela.id, :format => "pdf"), :class => 'salvar-pdf btn btn-primary pull-right text-center hidden-print' %>
</div>


<div class="well well-sm text-center"><h2>Avaliação geral</h2></div>

<h3>Problemas nessa tela: <br><small>Proporção de problemas na tela dentre todos os tópicos e avaliadores</small></h3>

<%= pie_chart @result_problema %>

<h3>Tipos de problemas: <br><small>Quais os tipos de problemas mais frequentes</small></h3>

<%= column_chart @result_tipos %>

<%= pie_chart @result_tipos_topicos %>

<hr>

<div class="container text-center alert <% if @nota <= 1.3 %>alert-danger<% elsif @nota > 1.3 and @nota <= 2.6 %>alert-warning<% elsif @nota > 2.6 %>alert-success<% end %>">
	<h3>Nota geral</h3><h1><%= @nota %><small> de 4</small></h1>
</div>

<div class="well well-sm text-center"><h2>Avaliação por tópico</h2></div>

<div class="row text-center">
	<div class="col-md-6">
		grafico 1
	</div>	
	<div class="col-md-6">
		grafico 2
	</div>
</div>

<ul class="list-group">
	<li class="list-group-item well" style="margin-bottom:-3px; border-bottom-left-radius:0px; border-bottom-right-radius:0px;">
		<h3>Comentários:<br><small class="hidden-print">Ajude avaliando os usuários de acordo com os comentários. Visite o perfil dos avaliadores e dê seu feedback. <% 3.times do %><i class="glyphicon glyphicon-star"></i><% end %><% 2.times do %><i class="glyphicon glyphicon-star-empty"></i><% end %></small></h3>
	</li>
<% @resultados.each do |resultado| %>
	<% unless resultado.comment.empty? %>
	<li class="list-group-item">
		<div class="row">
			<div class="col-md-1 text-center">
				<%= image_tag resultado.tela.project.user.avatar.url(:thumb), :class => 'img-circle img-responsive' %>
				<%= link_to resultado.tela.project.user.name, profile_index_path(:user => resultado.tela.project.user.id) %>
			</div> 
			<div class="col-md-10">
				<%= resultado.comment %>
			</div>
		</div>
	</li>
	<% end %>
<% end %>
</ul>


</div>